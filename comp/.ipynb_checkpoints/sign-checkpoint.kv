<SignScreen>:
    name: "login"

    email: email
    password: password

    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#39B3F2")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text:"Email: "
            font_size: '0.635cm'
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.2, 0.09

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.09

        Label:
            text:"Password: "
            font_size: '0.635cm'
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.2, 0.09

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.09

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                app.change_screen("home_screen")
                
        Button:
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Don't have an Account?"
            on_release:
                app.change_screen("login_screen")