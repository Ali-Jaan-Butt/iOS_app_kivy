#:import utils kivy.utils
<SignScreen>:
    f_username: username
    f_password: password
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            spacing: 10

            Button:
                text: '< Back'
                size_hint_x: None
                width: dp(100)
                on_press: app.on_back_pressed()  # Adjust the method as needed

            Label:
                text: 'Your Title'
                font_size: '20sp'
                color: 1, 1, 1, 1  # Adjust the color as needed

    FloatLayout:
        size_hint: (1, 1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#39B3F2")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 2
            cols: 2
            padding: 350
            spacing: 350
            Label:
                text: 'User Name:'
                color: 0, 0, 0, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            TextInput:
                id: username
                size_hint: (None, None)
                size: 200, 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: 'Password:'
                color: 0, 0, 0, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            TextInput:
                id: password
                password: True
                size_hint: (None, None)
                size: 200, 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 200, 50
            #pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Button:
                text: 'Submit'
                #size_hint: (None, None)
                size: 200, 50
                #pos_hint: {'center_x': 0.5, 'center_y': 0.5}
