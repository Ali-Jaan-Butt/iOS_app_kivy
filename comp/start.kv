#:import utils kivy.utils
<StartScreen>:
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#39B3F2")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 2
            # pos_hint: {"top":1, "left":1}
            size_hint_y: None
            height: dp(700)
            Image:
                source: "img/start.jpg"
                size_hint: dp(500), dp(300)
                size: dp(300), dp(200)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}