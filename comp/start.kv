#:import utils kivy.utils
<StartScreen>:
    FloatLayout:
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#39B3F2")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 2
            # pos_hint: {"top":1, "left":1}
            size_hint_y: None
            height: dp(700)
            Image:
                source: "img/doctor.png"
                size_hint: dp(100), dp(100)
                size: dp(100), dp(100)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
            BoxLayout:
                orientation: 'vertical'

                Button:
                    canvas:
                        Color:
                            rgb: utils.get_color_from_hex("#F8C471")
                    text: 'Sign in'
                    size_hint: (None, None)  # Disable size_hint to use absolute size
                    size: 200, 50  # Set the desired width and height of the button
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Center the button in the layout

                # Other widgets or layouts can be added below as needed
                    on_release: app.change_screen("sign_screen")
                Button:
                    canvas.before:
                        Color:
                            rgb: utils.get_color_from_hex("#F8C471")
                    text: 'Sign up'
                    size_hint: (None, None)  # Disable size_hint to use absolute size
                    size: 200, 50  # Set the desired width and height of the button
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Center the button in the layout

                # Other widgets or layouts can be added below as needed
                    on_release: app.change_screen("login_screen")

